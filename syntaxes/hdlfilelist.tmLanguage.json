{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "HDLFileList",
    "scopeName": "source.hdlfilelist",
    "patterns": [
        {
            "name": "file.hdlfilelist",
            "match": "[\\w\\d\\-\\.]+$"
        },
        {
            "name": "separator.hdlfilelist",
            "match": "/"
        },
        {
            "name": "folder.hdlfilelist",
            "match": "[\\w\\d\\-\\.]+"
        }
    ]
}