{
  "name": "hdlfilelist",
  "displayName": "HDLFileList",
  "description": "Simple hints and management of hdl .f filelists",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:HDLFileList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "HDLFileList",
      "aliases": ["HDL files"],
      "extensions": [
        ".f"
      ]
    }],
    "grammars": [
      {
        "language": "HDLFileList",
        "scopeName": "source.hdlfilelist",
        "path": "./syntaxes/hdlfilelist.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [{
          "scope": "folder.hdlfilelist",
          "settings": {
            "foreground": "#CE9178"
          }
        },
        {
          "scope": "separator.hdlfilelist",
          "settings": {
            "foreground": "#f0c308"
          }
        },
        {
          "scope": "file.hdlfilelist",
          "settings": {
            "foreground": "#9CDCFE"
        }
      }]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
